{
	"scopeName": "inline.awk",
	"injectionSelector": "L:source.shell -comment",
	"patterns": [
		{
			"name": "meta.embedded.block.awk",
			"begin": "(?<=^|\\s|\\||;|\\()(awk|gawk|mawk|nawk)\\s+(?=[^\\n]*')",
			"beginCaptures": {
				"1": {
					"name": "support.function.awk.shell"
				}
			},
			"end": "(?<=')(?=\\s|$|\\||;|\\))",
			"patterns": [
				{
					"include": "#awk-flags"
				},
				{
					"include": "#awk-single-quoted-script"
				},
				{
					"include": "#awk-double-quoted-script"
				}
			]
		}
	],
	"repository": {
		"awk-flags": {
			"match": "(-[fFvW])\\s*(\\S+)?",
			"captures": {
				"1": {
					"name": "entity.name.tag.awk"
				},
				"2": {
					"name": "variable.parameter.awk"
				}
			}
		},
		"awk-single-quoted-script": {
			"name": "meta.embedded.inline.awk",
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.awk"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.awk"
				}
			},
			"contentName": "source.awk",
			"patterns": [
				{
					"include": "source.awk"
				}
			]
		},
		"awk-double-quoted-script": {
			"name": "meta.embedded.inline.awk",
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.awk"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.awk"
				}
			},
			"contentName": "source.awk",
			"patterns": [
				{
					"include": "source.awk"
				}
			]
		}
	}
}
